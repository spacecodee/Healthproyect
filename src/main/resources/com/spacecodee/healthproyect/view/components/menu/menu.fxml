<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity"
            minWidth="-Infinity" styleClass="main-color" stylesheets="@../../../assets/style/style.css"
            xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.spacecodee.healthproyect.controllers.menu.Menu">
    <top>
        <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity"
              minWidth="-Infinity" BorderPane.alignment="CENTER">
            <Label fx:id="lblTitle" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                   minHeight="-Infinity" minWidth="-Infinity" text="Title" HBox.hgrow="ALWAYS">
                <styleClass>
                    <String fx:value="font-bold"/>
                    <String fx:value="h1"/>
                </styleClass>
            </Label>
        </HBox>
    </top>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <center>
        <HBox alignment="TOP_CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
              minHeight="-Infinity" minWidth="-Infinity" spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity"
                  minWidth="-Infinity" styleClass="card" HBox.hgrow="ALWAYS">
                <ImageView fx:id="iconUsers" fitHeight="96.0" fitWidth="96.0" pickOnBounds="true" preserveRatio="true"
                           VBox.vgrow="ALWAYS">
                    <Image url="@../../../assets/icons/user.png"/>
                </ImageView>
                <Label text="Total Usuarios">
                    <styleClass>
                        <String fx:value="font-bold"/>
                        <String fx:value="h2"/>
                    </styleClass>
                </Label>
                <Label fx:id="lblCountUsers" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
                       minHeight="-Infinity" minWidth="-Infinity" prefHeight="100.0" prefWidth="100.0" text="50"
                       VBox.vgrow="ALWAYS">
                    <styleClass>
                        <String fx:value="font-bold"/>
                        <String fx:value="h3"/>
                        <String fx:value="card__circle"/>
                    </styleClass>
                </Label>
            </VBox>
            <VBox alignment="TOP_CENTER" layoutX="20.0" layoutY="20.0" maxHeight="-Infinity"
                  maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" styleClass="card"
                  HBox.hgrow="ALWAYS">
                <ImageView fx:id="iconCustomer" fitHeight="96.0" fitWidth="96.0" pickOnBounds="true"
                           preserveRatio="true" VBox.vgrow="ALWAYS">
                    <Image url="@../../../assets/icons/customers.png"/>
                </ImageView>
                <Label text="Total Clientes">
                    <styleClass>
                        <String fx:value="font-bold"/>
                        <String fx:value="h2"/>
                    </styleClass>
                </Label>
                <Label fx:id="lblCountCustomers" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
                       minHeight="-Infinity" minWidth="-Infinity" prefHeight="100.0" prefWidth="100.0" text="100">
                    <styleClass>
                        <String fx:value="font-bold"/>
                        <String fx:value="h3"/>
                        <String fx:value="card__circle"/>
                    </styleClass>
                </Label>
            </VBox>
            <VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity"
                  minWidth="-Infinity" styleClass="card" HBox.hgrow="ALWAYS">
                <ImageView fx:id="iconTypeReservations" fitHeight="96.0" fitWidth="96.0" pickOnBounds="true"
                           preserveRatio="true" VBox.vgrow="ALWAYS">
                    <Image url="@../../../assets/icons/type-reserved.png"/>
                </ImageView>
                <Label text="Total Tipo de reservas">
                    <styleClass>
                        <String fx:value="font-bold"/>
                        <String fx:value="h2"/>
                    </styleClass>
                </Label>
                <Label fx:id="lblTypeReservations" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
                       minHeight="-Infinity" minWidth="-Infinity" prefHeight="100.0" prefWidth="100.0" text="10">
                    <styleClass>
                        <String fx:value="font-bold"/>
                        <String fx:value="h3"/>
                        <String fx:value="card__circle"/>
                    </styleClass>
                </Label>
            </VBox>
        </HBox>
    </center>
    <bottom>
        <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity"
              minWidth="-Infinity" BorderPane.alignment="CENTER">
            <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity"
                   minWidth="-Infinity" text="Desarrollado" HBox.hgrow="ALWAYS">
                <styleClass>
                    <String fx:value="font-bold"/>
                    <String fx:value="h3"/>
                </styleClass>
            </Label>
        </HBox>
    </bottom>
</BorderPane>
