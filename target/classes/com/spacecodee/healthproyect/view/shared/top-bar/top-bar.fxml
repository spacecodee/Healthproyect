<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<HBox alignment="TOP_CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity"
      minWidth="-Infinity" spacing="10.0" styleClass="main-color" stylesheets="@../../../assets/style/style.css"
      xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.spacecodee.healthproyect.controllers.top_bar.TopBar">
    <padding>
        <Insets bottom="10.0" left="30.0" right="30.0" top="10.0"/>
    </padding>
    <HBox alignment="CENTER_LEFT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
          minHeight="-Infinity" minWidth="-Infinity" HBox.hgrow="ALWAYS">
        <ImageView fx:id="imgLogo" fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true"
                   HBox.hgrow="ALWAYS">
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
            <Image url="@../../../assets/icons/asteroid.png"/>
        </ImageView>
    </HBox>
    <HBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="-Infinity" minHeight="-Infinity"
          minWidth="-Infinity" prefWidth="35.0" HBox.hgrow="ALWAYS">
        <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity"
                minWidth="-Infinity" mnemonicParsing="false" styleClass="btn__icon" HBox.hgrow="ALWAYS">
            <graphic>
                <ImageView fx:id="imgBell" fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                    <Image url="@../../../assets/icons/bell.png"/>
                </ImageView>
            </graphic>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>
    </HBox>
    <HBox alignment="CENTER" layoutX="470.0" layoutY="10.0" maxHeight="1.7976931348623157E308" maxWidth="-Infinity"
          minHeight="-Infinity" minWidth="-Infinity" prefWidth="300.0" spacing="10.0" HBox.hgrow="ALWAYS">
        <ImageView fx:id="imgProfile" fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true"
                   HBox.hgrow="ALWAYS">
            <Image url="@../../../assets/img/profile.jpg"/>
        </ImageView>
        <Label fx:id="lblNmeUser" maxHeight="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
               text="SCARLETT JOHANSSON" HBox.hgrow="ALWAYS">
            <styleClass>
                <String fx:value="font-bold"/>
                <String fx:value="h4"/>
            </styleClass>
        </Label>
        <padding>
            <Insets left="20.0" right="20.0"/>
        </padding>
    </HBox>
</HBox>
